<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F5E3.Pages.TakeoffOverview"
            Title="Overview">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Taxi Time (min):"/>
                <Entry Text="{Binding TaxiTime}"/>
                <Label Text="Use AntiIce"/>
                <Switch IsToggled="{Binding AntiIceOn}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding TakeoffSpeed,StringFormat='Takeoff Speed:{0}kts'}"/>
                <Label Text="{Binding AftStickSpeed,StringFormat='Aft Stick Speed:{0}kts'}"/>
                <Label Text="{Binding ObstacleClearanceSpeed,StringFormat='Obstacle Clearance Speed:{0}kts'}"/>
                
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding TakeoffWeight,StringFormat='Takeoff Weight:{0}lbs'}"/>
                <Label Text="{Binding CG,StringFormat='CG:{0}%MAC'}"/>
                <Label Text="{Binding TakeoffFactor,StringFormat='Takeoff Factor:{0}'}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>